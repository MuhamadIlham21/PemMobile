<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBrg"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_bike"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvBarang"
            android:layout_toEndOf="@id/imgBrg"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Nama Barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvHarga_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBarang"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgBrg"
            android:text="Harga : "
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBarang"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/tvHarga_label"
            android:text="Rp. 4.000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvSatuan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHarga_label"
            android:layout_toEndOf="@id/imgBrg"
            android:text="Satuan : "
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvSatuan"
            android:layout_below="@+id/tvHarga_label"
            android:layout_toEndOf="@id/tvSatuan_label"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:text="Pcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvStok_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSatuan_label"
            android:layout_toEndOf="@id/imgBrg"
            android:text="Stok : "
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvStok"
            android:layout_below="@+id/tvSatuan_label"
            android:layout_toEndOf="@id/tvStok_label"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:text="Pcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>